<Window x:Class="ProSecuritiesTrading.PSTTrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PSTTrader" Height="700" Width="1000" MinWidth="500" MinHeight="300" ScrollViewer.VerticalScrollBarVisibility="Disabled" Loaded="MainWindow_Loaded" Closing="MainWindow_Closing" Closed="MainWindow_Closed">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontSize="14">
            <MenuItem Header="New">
                <MenuItem x:Name="menuItemTimeAndSales" Header="Time And Sales" Click="menuItemTimeAndSales_Click"/>
                <MenuItem x:Name="menuItemOrderOperations" Header="OrderOperations" Click="menuItemOrderOperations_Click"/>
                <MenuItem x:Name="menuItemOutput" Header="Output" Click="menuItemOutput_Click"/>
            </MenuItem>
            <MenuItem Header="Connection">
                <MenuItem x:Name="menuItemManagingConnections" Header="Managing Connections" Click="menuItemManagingConnections_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
